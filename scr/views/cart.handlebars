{{!-- {{products}} --}}

<div class="container">
    <h1>Carrito de Compras</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Título</th>
                <th scope="col">Descripción</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
               {{!-- {{log this}}  --}}<!-- Imprime cada elemento de products en la consola -->
                <tr>
                    <td style="display: none;">{{product._id}}</td> <!-- Columna oculta para el ID -->
                    <td>{{product.title}}</td>
                    <td>{{product.description}}</td>
                    <td>$ {{product.price}}</td>
                    <td>{{quantity}}</td>
                    <td>
                        <button onclick="deleteProduct('{{../cartID}}','{{product._id}}')" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <div class="d-flex justify-content-between mt-3">
        <button onclick="window.history.back()" class="btn btn-secondary">Volver</button>
        <button onclick="purchase('{{cartID}}')" class="btn btn-primary">Comprar</button>
    </div>
</div>

<script src="/js/cart.js"></script>